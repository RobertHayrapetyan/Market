<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminSellerInfoView">

    <TextView
        android:id="@+id/admin_seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Seller name"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:textIsSelectable="true"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/admin_seller_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Seller phone"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="true"
        android:layout_below="@id/admin_seller_name"/>

    <TextView
        android:id="@+id/admin_seller_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Seller address"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="true"
        android:layout_below="@id/admin_seller_phone"/>

    <TextView
        android:id="@+id/admin_seller_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Seller email"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="true"
        android:layout_below="@id/admin_seller_address"/>

    <TextView
        android:id="@+id/admin_seller_sid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Seller seller id"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:textColor="@color/colorAccent"
        android:textIsSelectable="true"
        android:layout_below="@id/admin_seller_email"/>

    <Button
        android:id="@+id/admin_call_to_seller_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_green"
        android:text="Call to seller"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"/>

</RelativeLayout>