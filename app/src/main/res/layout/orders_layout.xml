<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="15dp">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/order_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller name"
            android:textSize="14sp"
            android:textColor="@color/colorGrey"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_seller_name"
            android:text="Userame"
            android:textSize="14sp"
            android:textColor="@color/colorGrey"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/linL"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: "
                android:textSize="14sp"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/order_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textSize="14sp"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linL1"
            android:layout_below="@+id/linL"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:textSize="18sp"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/currency_cart_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AMD"
                android:textSize="18sp"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linL1"
            android:text="Address, City"
            android:textSize="18sp"
            android:textColor="@color/colorGrey"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_address"
            android:text="Date, Time"
            android:textSize="14sp"
            android:textColor="@color/colorGrey"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/show_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_date_time"
            android:text="Show"
            android:textAllCaps="false"
            android:background="@android:color/white"
            android:layout_margin="20dp"
            android:textSize="18sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>