<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.MainActivity">

    <ImageView
        android:id="@+id/seller_login_logo_main"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/shop_market_logo"/>

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_above="@+id/become_seller_link"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/button_grey"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Login"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/main_join_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_login_btn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/inputs"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Register now"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/become_seller_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wants to become a Seller?"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>